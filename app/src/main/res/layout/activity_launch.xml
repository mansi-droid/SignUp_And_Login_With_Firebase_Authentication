<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view"
        style="@android:style/Theme.NoTitleBar.Fullscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_background"
        android:visibility="visible"
        tools:context=".activities.LaunchActivity">


        <ImageView
            android:id="@+id/ivAppLogo"
            android:layout_width="@dimen/_80ssp"
            android:layout_height="@dimen/_80ssp"
            android:contentDescription="@string/app_logo"
            android:src="@drawable/app_logo"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/tvAppName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20ssp"
            android:fontFamily="@font/cursive_bold"
            android:gravity="center"
            android:text="@string/your_app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/_28ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivAppLogo"
            app:layout_constraintVertical_chainStyle="packed" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>